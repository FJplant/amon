        amonagent_amon_instance: "http://10.0.2.2:8002",
        ansible_python_interpreter: "/usr/bin/python3"
    }
    end

    distro.vm.provision "ansible" do |ansible|
    ansible.playbook = 'ansible/setup_deb.yml'
    ansible.sudo = true
      ansible.extra_vars = {
        ansible_python_interpreter: "/usr/bin/python3"
    }
    end
  end


